<Window x:Class="CMCSPrototype.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Contract Monthly Claim System (CMCS)" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#E8F5E9">

    <Grid>
        <TabControl>

            <!-- Lecturer Dashboard -->
            <TabItem Header="Lecturer Dashboard">
                <Grid Background="#C8E6C9" Margin="10">
                    <StackPanel>
                        <TextBlock Text="Lecturer Dashboard" 
                                   FontSize="22" FontWeight="Bold" 
                                   Foreground="#1B5E20" Margin="0,0,0,20"/>

                        <Button Content="Submit New Claim" 
                                Background="#4CAF50" Foreground="White"
                                Margin="0,5" Height="35"/>
                        <Button Content="Upload Documents" 
                                Background="#388E3C" Foreground="White"
                                Margin="0,5" Height="35"/>
                        <Button Content="Track Claim Status" 
                                Background="#2E7D32" Foreground="White"
                                Margin="0,5" Height="35"/>

                        <TextBlock Text="Claim History" 
                                   FontSize="18" FontWeight="Bold" 
                                   Foreground="#1B5E20" Margin="0,20,0,10"/>

                        <ListView Height="200" Background="White" BorderBrush="#2E7D32" BorderThickness="1">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Month" Width="150" DisplayMemberBinding="{Binding Month}"/>
                                    <GridViewColumn Header="Hours Worked" Width="150" DisplayMemberBinding="{Binding Hours}"/>
                                    <GridViewColumn Header="Status" Width="150" DisplayMemberBinding="{Binding Status}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- New Claim Form -->
            <TabItem Header="New Claim Form">
                <Grid Background="#A5D6A7" Margin="10">
                    <StackPanel>
                        <TextBlock Text="Submit New Claim" 
                                   FontSize="22" FontWeight="Bold" 
                                   Foreground="#1B5E20" Margin="0,0,0,20"/>

                        <TextBlock Text="Month:" Foreground="#1B5E20"/>
                        <ComboBox Background="White" Margin="0,0,0,10" Height="30">
                            <ComboBoxItem Content="January"/>
                            <ComboBoxItem Content="February"/>
                            <ComboBoxItem Content="March"/>
                        </ComboBox>

                        <TextBlock Text="Hours Worked:" Foreground="#1B5E20"/>
                        <TextBox Background="White" Margin="0,0,0,10" Height="30"/>

                        <TextBlock Text="Calculated Claim Amount (R):" Foreground="#1B5E20"/>
                        <TextBox Background="#E8F5E9" IsReadOnly="True" Margin="0,0,0,20" Height="30"/>

                        <Button Content="Submit Claim" 
                                Background="#388E3C" Foreground="White"
                                Width="150" Height="35"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Programme Coordinator Dashboard -->
            <TabItem Header="Programme Coordinator">
                <Grid Background="#C8E6C9" Margin="10">
                    <StackPanel>
                        <TextBlock Text="Programme Coordinator Dashboard" 
                                   FontSize="22" FontWeight="Bold" 
                                   Foreground="#1B5E20" Margin="0,0,0,20"/>

                        <TextBlock Text="Pending Claims" FontSize="18" 
                                   FontWeight="Bold" Foreground="#1B5E20"/>
                        <ListView Height="250" Background="White" BorderBrush="#2E7D32" BorderThickness="1">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Lecturer" Width="150" DisplayMemberBinding="{Binding Lecturer}"/>
                                    <GridViewColumn Header="Month" Width="150" DisplayMemberBinding="{Binding Month}"/>
                                    <GridViewColumn Header="Hours" Width="150" DisplayMemberBinding="{Binding Hours}"/>
                                    <GridViewColumn Header="Status" Width="100" DisplayMemberBinding="{Binding Status}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                            <Button Content="Verify" Background="#4CAF50" Foreground="White" Margin="5" Width="100" Height="35"/>
                            <Button Content="Reject" Background="#2E7D32" Foreground="White" Margin="5" Width="100" Height="35"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Academic Manager Dashboard -->
            <TabItem Header="Academic Manager">
                <Grid Background="#A5D6A7" Margin="10">
                    <StackPanel>
                        <TextBlock Text="Academic Manager Dashboard" 
                                   FontSize="22" FontWeight="Bold" 
                                   Foreground="#1B5E20" Margin="0,0,0,20"/>

                        <TextBlock Text="Claims for Approval" FontSize="18" 
                                   FontWeight="Bold" Foreground="#1B5E20"/>
                        <ListView Height="250" Background="White" BorderBrush="#2E7D32" BorderThickness="1">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Lecturer" Width="150" DisplayMemberBinding="{Binding Lecturer}"/>
                                    <GridViewColumn Header="Month" Width="150" DisplayMemberBinding="{Binding Month}"/>
                                    <GridViewColumn Header="Amount" Width="150" DisplayMemberBinding="{Binding Amount}"/>
                                    <GridViewColumn Header="Status" Width="100" DisplayMemberBinding="{Binding Status}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                            <Button Content="Approve" Background="#4CAF50" Foreground="White" Margin="5" Width="100" Height="35"/>
                            <Button Content="Reject" Background="#2E7D32" Foreground="White" Margin="5" Width="100" Height="35"/>
                            <Button Content="Generate Report" Background="#1B5E20" Foreground="White" Margin="5" Width="130" Height="35"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
